---
import LinkButton from "./LinkButton.astro";

// Props
const { text, title, imageSrc, showButton = true } = Astro.props;  // showButton por defecto es true
---
<section
  class="flex flex-col w-full landing-section bg-black h-auto sm:h-screen text-center overflow-hidden relative top-0 bottom-0 sm:grid sm:grid-cols-2"
>
  <!-- Main -->
  <main class="bg-black w-full h-auto py-10 font-bold text-xl flex flex-col items-start justify-center gap-6 p-10 sm:h-full">
    <div slot="content" class="flex flex-col items-start justify-start gap-6 text-left">
      <h1 class="text-[#c0c4d5] font-bold text-3xl sm:text-4xl">{title}</h1> <!-- Título ajustado para pantallas pequeñas -->
      <p class="text-[#c0c4d5] font-medium text-base sm:text-xl whitespace-pre-line">{text}</p> <!-- Texto ajustado para pantallas pequeñas -->
      
      <!-- Mostrar el botón solo si showButton es true -->
      {showButton && <LinkButton />}
    </div>
  </main>

  <!-- Aside -->
  <aside class="bg-black w-full h-auto flex justify-center items-center sm:h-full">
    <div class="flex justify-center items-center px-6">
      <img
        src={imageSrc}
        alt="Imagen del aside"
        class="max-w-full max-h-full object-contain rounded-lg"
      />
    </div>
  </aside>
</section>